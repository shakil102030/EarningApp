<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".WatchVideoActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.EarningApp.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.EarningApp.PopupOverlay">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

     <RelativeLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <View
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:background="@drawable/background_bottom"/>

        <View
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/rounded_box"/>
         <TextView
             android:id="@+id/watchVideoScoreId"
             android:layout_width="150dp"
             android:layout_height="40dp"
             android:text="0/15"
             android:textStyle="bold"
             android:textSize="20sp"
             android:gravity="center"
             android:layout_marginTop="62dp"
             android:textAlignment="center"
             android:layout_alignParentEnd="true"
             android:layout_marginRight="30dp"
             android:background="@drawable/bg_task_container"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="100dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/watchvideo2"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:src="@drawable/video3"/>
                <TextView
                    android:id="@+id/watchVideoTextViewId"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:textColor="@color/black"
                    android:text="@string/video_text"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="40dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>